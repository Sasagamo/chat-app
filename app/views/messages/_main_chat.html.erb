<div class="main_chat">
  <div class="main_chat_header">
    <div class="left_header">
      <div class="chat_room">
        hogefuga
      </div>
    </div>
    <div class="right_header">
      <div class="exit_button">
        <a href="#">チャットを終了する</a>
      </div>
    </div>
  </div>
  <div class="messages">
    <div class="message">
      <div class="message_date">
        <div class="message_name">Tom</div>
        <div class="message_time">2020/3/31(Wed) 12:43:30</div>
      </div>
      <div class="message_text">おはよう</div>
    </div>    
    <div class="messagge">
      <div class="message_date">
        <div class="message_name">Tom</div>
        <div class="message_time">2020/3/31(Wed) 12:43:30</div>
      </div>
      <div class="message_text">おはよう</div>
    </div>
  </div>
  <%= form_with model: [@room,@message],html:{class:"form"},local:true do |f| %>
  <div class="form_input">
    <%= f.text_field :content, class:'form_message',placeholder:'type a message' %>
    <label  class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image,class: 'hidden' %>
    </label>
  </div>
  <%= f.submit'送信',class:'form_submit' %>
  <% end %>
</div>